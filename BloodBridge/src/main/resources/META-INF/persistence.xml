<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="bloodbridgePU" transaction-type="JTA">

        <!-- Connect to JNDI DataSource defined in context.xml -->
        <jta-data-source>java:comp/env/jdbc/bloodbridgeDB</jta-data-source>

        <!-- Entities -->
        <class>com.jartiste.bloodbridge.domain.entity.Donor</class>
        <class>com.jartiste.bloodbridge.domain.entity.Receiver</class>

        <!-- JPA / Hibernate Settings -->
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
